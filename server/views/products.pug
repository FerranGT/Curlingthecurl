extends layout

block content
	.container.theme-showcase(role='main', ng-controller='productsCtrl')
		div.searchengine
			h3 Buscador: {{ results.length }} de {{ products.length }} productos
			form.form-grup(action='', method='', role='form')
				.form-group
					label(for='') Filtrar por nombre
					input.form-control(ng-model='queryProduct', type='text', id='', placeholder='Introduce el nombre del articulo')
		#product-container
			.show_product.text-center(ng-repeat='product in products | filter: { title : queryProduct } as results')
				.image_product
					img.image_size.img-responsive.imageproduct(ng-src='{{ product.url }}')
					span  {{ product.title }} 
					h4 {{ product.price }} â‚¬
					a.button_info.btn.btn-default.btn-lg(href='', ng-click='showCustom(product)') + info








							