extends layout

block content
	.container.container-create
		.col-md-12
			h1
				span.glyphicon.glyphicon-pencil.icon_create
				|  Actualiza producto o servicio
		
			form.form-grup(action='/items', method='POST', role='form')
				.form-group
					.col-md-12
						.row
							.col-md-4
								label.control-label(for='input') Título:
								input.form-control(type='text', name='title', required='', value=data.title)
							.col-md-4
								label.control-label(for='input') Precio:
								input.form-control(type='number', step='0.01', name='price', required='', value=data.price)
							.col-md-4
								.form-group
									label(for='sel1') Selecciona el tipo:
									select#sel1.form-control(name='type', required="", value=data.type)
										option(selected='', disabled='') Selecciona una opción
										if data.type=='producto'
											option(selected='') producto
											option servicio
										else
											option producto
											option(selected='') servicio
											
							.col-md-12
								label.control-label(for='input') Descripción:
								textarea.form-control(type='text' name='desc', rows='8', cols='100', required='')= data.desc
							.col-md-12
								label.control-label(for='input') Imagen:
								input.form-control(type='text', name='url', required='', value=data.url)
							.col-md-12
								label.control-label.hidden(for='input') ID:
								input.form-control.hidden(type='text', name='_id', required='', value=data._id)
				
				.col-md-12
					button.btncrear.btn.botton_create(type='submit') Crear